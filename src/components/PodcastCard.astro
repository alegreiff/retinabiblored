---
import type { GetStaticPaths } from "astro";
import type { Pelicula, Podcast } from '@/interfaces/retina'
import { Image } from "astro:assets";

interface Props {
podcast: Podcast

}
const { podcast } = Astro.props
const { imagenes: { destacada: imageDest }, nombre, descripcion, duracion, slug } = podcast
console.log(slug)
 
---


<a class="card bg-zinc-600 max-w-96 shadow-xl  hover:bg-slate-900 group cursor-pointer"
href={slug}>
  <figure>
    <Image
      transition:name={`${slug}-image`}
      src={imageDest}
      width={400}
      height={400}
      class="group-hover:scale-110 duration-500"
      alt={nombre} />
      
  </figure>
  <div class="card-body">
    <h2 class="card-title text-2xl" transition:name={slug}>
      {nombre}
      
    </h2>
    <p class="hidden md:block">{descripcion}</p>
    <div class="card-actions justify-end">
      <div class="badge badge-outline">{`${duracion} min.`}</div>
      
    </div>
  </div>
</a>